{
  "name": "react-ssr-kit",
  "version": "0.0.1",
  "description": "react-ssr",
  "main": "index.js",
  "scripts": {
    "dev:client": "cross-env NODE_ENV=development webpack-dev-server --config build/webpack.config.client.js",
    "dev:server": "nodemon server/server.js",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.config.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.config.server.js",
    "clean": "rimraf client-dist && rimraf server-dist",
    "build": "yarn run clean && yarn run build:client && yarn run build:server",
    "commit": "npm install -g commitizen && commitizen init cz-conventional-changelog --save-dev --save-exact"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhao-jun/react-ssr-kit.git"
  },
  "keywords": [
    "react-ssr"
  ],
  "author": "zhao-jun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zhao-jun/react-ssr-kit/issues"
  },
  "homepage": "https://github.com/zhao-jun/react-ssr-kit#readme",
  "devDependencies": {
    "art-template": "^4.13.0",
    "art-template-loader": "^1.4.3",
    "autoprefixer": "^9.1.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "chalk": "^2.4.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "html-webpack-plugin": "^3.2.0",
    "koa": "^2.5.2",
    "koa-art-template": "^1.1.1",
    "koa-proxies": "^0.7.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.4.2",
    "nodemon": "^1.18.4",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.3.5",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.6",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.5.0",
    "react-router-dom": "^4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
